---
import List from "../components/List.astro";

interface Props {
	title: string;
	role: string;
	link: string;
	dateRange: string;
	skills: string[];
	text: string;
}

const { title, role, text, link, dateRange, skills } = Astro.props;
---

<article>
	<a href={link} target="_blank">
		<header>
			<h1 class="text-[9pt] flex gap-1 items-center text-gray-cool-4">
				<span class="text-azure-4 font-medium">{title}</span> ({dateRange})
			</h1>
			<p class="mb-2 text-[9pt] text-gray-cool-3">{role}</p>
		</header>

		<main class="mb-2">
			<p class="text-gray-cool-2 text-[9pt]">
				{text}
			</p>
		</main>
	</a>

	<footer>
		<List items={skills} />
	</footer>
</article>
