.nav {
    position: fixed;
    top: 0;
    left: 0;
    margin-top: 8px;
    margin-left: 8px;
    color: color-white;

    @media print {
        display: none;
    }

    &__link {
        color: color-azure-5;
        padding: 4px 8px;
        font-size: 14px;

        &:hover {
            color: color-azure-4;  
        }

        &.is-active {
            color: color-gray-5;

            &:hover {
                color: color-gray-4;  
            }    
        }
    }
}