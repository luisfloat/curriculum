{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "package.json": "package-lock.json, pnpm-lock.yaml, .gitignore, tsconfig.json, *.d.ts, .release-it.json, eslint.config.js",
        "nuxt.config.ts": "vite.config.*, postcss.config.js, tailwind.config.js, i18n.*",
        "docker-compose.yml": "wrangler.*, .env*, .dev.vars, public_keys.*, drizzle.config.*",
        "app.vue": "error.vue"
    },
    "editor.tabSize": 2,
}